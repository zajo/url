import testing ;
import ../../config/checks/config : requires ;

import os ;
STANDALONE = [ os.environ STANDALONE ] ;
if $(STANDALONE)
{
    LIB =
        <define>BOOST_URL_STANDALONE=1
        <source>../src/src.cpp
        ;
}
else
{
    LIB = <library>/boost/url//boost_url ;
}

local SOURCES =
    _detail_char_type.cpp
    _detail_parse.cpp
    basic_url.cpp
    error.cpp
    host_type.cpp
    scheme.cpp
    static_pool.cpp
    static_url.cpp
    url.cpp
    url_base.cpp
    url_view.cpp
    urls.cpp
    ;

local LIMIT_SOURCES =
    ;

local RUN_TESTS ;

for local f in $(SOURCES)
{
    RUN_TESTS += [
        run $(f) main.cpp : : :
            $(LIB)
        ] ;
}

for local f in $(LIMIT_SOURCES)
{
    RUN_TESTS += [
        run $(f) main.cpp : : :
            <source>../src/src.cpp
        ] ;
}

run indexed_string.cpp main.cpp ;

alias run-tests : $(RUN_TESTS) ;
